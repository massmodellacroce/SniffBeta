<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".ProfileActivity"
    android:id="@+id/layout"
    android:focusableInTouchMode="false"
    android:background="#ffffff">

    <Button
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:text="My Info"
        android:id="@+id/MyInfo"
        android:longClickable="false"
        android:minHeight="120dp"
        android:minWidth="120dp"
        android:background="#e15258"
        android:textColor="#ffffff"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:text="My Pets"
        android:id="@+id/MyPets"
        android:minHeight="120dp"
        android:layout_alignTop="@+id/MyInfo"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:minWidth="120dp"
        android:background="#e15258"
        android:textColor="#ffffff" />

    <Button
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:text="Back"
        android:id="@+id/backprofile"
        android:onClick="back"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:minHeight="60dp"
        android:background="#e15258"
        android:textColor="#ffffff"
        android:layout_marginBottom="30dp" />

    <ImageView
        android:layout_width="80dp"
        android:layout_height="50dp"
        android:id="@+id/imageView3"
        android:src="@drawable/dogfootprint"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="91dp" />

</RelativeLayout>
