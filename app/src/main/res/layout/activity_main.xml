<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.sniff.sniffbeta.MainActivity"
    android:background="#ffffff">

    <Button
        android:layout_width="80dp"
        android:layout_height="40dp"
        android:text="Tag a pet"
        android:id="@+id/TagPetIntro"
        android:layout_alignParentBottom="true"
        android:width="30dp"
        android:height="100dp"
        android:textSize="10dp"
        android:background="#3079ab"
        android:textColor="#fffefefa"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="40dp" />

    <Button
        android:layout_width="80dp"
        android:layout_height="40dp"
        android:text="I lost my pet!"
        android:id="@+id/SearchMyPetIntro"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/TagPetIntro"
        android:width="30dp"
        android:height="100dp"
        android:textSize="10dp"
        android:background="#3079ab"
        android:textColor="#fffefefa"
        android:layout_marginLeft="50dp"
        android:layout_marginBottom="40dp" />

    <Button
        android:layout_width="80dp"
        android:layout_height="40dp"
        android:text="Profile"
        android:id="@+id/ProfileIntro"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/SearchMyPetIntro"
        android:layout_toEndOf="@+id/SearchMyPetIntro"
        android:width="30dp"
        android:height="100dp"
        android:textSize="10dp"
        android:background="#3079ab"
        android:textColor="#fffefefa"
        android:layout_marginLeft="50dp"
        android:layout_marginBottom="40dp" />

    <Button
        android:layout_width="60dp"
        android:layout_height="40dp"
        android:text="Sign In"
        android:id="@+id/SigninMain"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:textSize="10dp"
        android:textColor="#fdfdffff"
        android:background="#3079ab" />

    <Button
        android:layout_width="60dp"
        android:layout_height="40dp"
        android:text="Create account"
        android:id="@+id/CreateAccount"
        android:textSize="10dp"
        android:layout_below="@+id/SigninMain"
        android:layout_alignLeft="@+id/SigninMain"
        android:layout_alignStart="@+id/SigninMain"
        android:textColor="#fffefefa"
        android:background="#3079ab"
        android:layout_marginTop="10dp" />

    <ImageView
        android:layout_width="350dp"
        android:layout_height="300dp"
        android:id="@+id/imageViewMap"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="false"
        android:layout_alignParentRight="false"
        android:src="@drawable/map"
        android:contentDescription="imageMap" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Sniff!"
        android:id="@+id/textViewAppName"
        android:textSize="50dp"
        android:textColor="#3079ab"
        android:textStyle="bold"
        android:typeface="sans"
        android:layout_below="@+id/SigninMain"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:layout_width="40dp"
        android:layout_height="20dp"
        android:id="@+id/imageView2"
        android:src="@drawable/dog_icon"
        android:layout_below="@+id/SigninMain"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_above="@+id/imageViewMap"
        android:layout_alignRight="@+id/TagPetIntro"
        android:layout_alignEnd="@+id/TagPetIntro" />

</RelativeLayout>
